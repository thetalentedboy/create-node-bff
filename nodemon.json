{
    "restartable": "rs",
    "ignore": [
        ".git",
        ".svn",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "watch": [
        "./index.ts",
        "./vendor",
        "./service",
        "./middleware",
        "./infrastructure",
        "./controller"
    ],
    "events": {
        "restart": ""
    },
    "exec": "npx ts-node",
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ts json"
}
